<h1>All Players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Wins</th>
    <th>Ties</th>
    <th>Losses</th>
    <th>Goals</th>
    <th>Assists</th>
    <th>Is Available</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= link_to player.fullname, player %></td>
    <td><%= player.wins %></td>
    <td><%= player.ties %></td>
    <td><%= player.loses %></td>
    <td><%= player.goals %></td>
    <td><%= player.assists %></td>
    <td><%= player.isavailable %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

