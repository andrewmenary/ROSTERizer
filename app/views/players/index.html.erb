<h1>Listing players</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Nickname</th>
    <th>Wins</th>
    <th>Ties</th>
    <th>Loses</th>
    <th>Goals</th>
    <th>Assists</th>
    <th>Isactive</th>
    <th>Isavailable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.firstname %></td>
    <td><%= player.lastname %></td>
    <td><%= player.nickname %></td>
    <td><%= player.wins %></td>
    <td><%= player.ties %></td>
    <td><%= player.loses %></td>
    <td><%= player.goals %></td>
    <td><%= player.assists %></td>
    <td><%= player.isactive %></td>
    <td><%= player.isavailable %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

